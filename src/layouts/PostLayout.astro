---
import PageLayout from './PageLayout.astro';
import SubscribeForm from '../components/SubscribeForm.astro';
import type { CollectionEntry } from 'astro:content';

interface Props {
  frontmatter: CollectionEntry<'writings'>['data'];
}

const { frontmatter } = Astro.props;

const formattedDate = frontmatter.date.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});

const formattedUpdated = frontmatter.updated?.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<PageLayout title={frontmatter.title} description={frontmatter.description}>
  <article class="post">
    <header class="post-header">
      <h1>{frontmatter.title}</h1>
      <div class="post-meta">
        <time datetime={frontmatter.date.toISOString()}>{formattedDate}</time>
        {formattedUpdated && (
          <span class="post-updated">
            &middot; Updated <time datetime={frontmatter.updated!.toISOString()}>{formattedUpdated}</time>
          </span>
        )}
      </div>
      {frontmatter.tags && frontmatter.tags.length > 0 && (
        <div class="post-tags">
          {frontmatter.tags.map((tag) => (
            <span class="tag">{tag}</span>
          ))}
        </div>
      )}
    </header>
    <div class="prose">
      <slot />
    </div>
    <SubscribeForm />
  </article>
</PageLayout>

<script>
  const params = new URLSearchParams(window.location.search);
  const token = params.get('t');
  if (token) {
    const slug = window.location.pathname.replace('/writings/', '').replace(/\/$/, '');
    fetch('/api/track', {
      method: 'POST',
      body: JSON.stringify({ token, slug }),
      headers: { 'Content-Type': 'application/json' },
    }).catch(() => {});
    history.replaceState(null, '', window.location.pathname);
  }
</script>

<style>
  .post {
    padding-top: var(--space-3xl);
    max-width: var(--content-max-width);
  }

  .post-header {
    margin-bottom: var(--space-3xl);
  }

  .post-header h1 {
    margin-bottom: var(--space-sm);
  }

  .post-meta {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }

  .post-updated {
    color: var(--color-text-muted);
  }

  .post-tags {
    display: flex;
    gap: var(--space-sm);
    margin-top: var(--space-md);
    flex-wrap: wrap;
  }

  .tag {
    font-size: var(--text-xs);
    color: var(--color-text-muted);
    background-color: var(--color-surface);
    padding: var(--space-xs) var(--space-sm);
    border-radius: 4px;
    font-family: var(--font-mono);
    letter-spacing: var(--tracking-wide);
    text-transform: lowercase;
    transition: color var(--transition-base), background-color var(--transition-base);
  }

  .tag:hover {
    color: var(--color-accent);
    background-color: var(--color-border);
  }

  @media (min-width: 640px) {
    .post {
      padding-top: var(--space-4xl);
    }
  }
</style>
