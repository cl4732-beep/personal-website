---
const pathname = Astro.url.pathname;
const navLinks = [
  { href: '/writings', label: 'Writings' },
  { href: '/books', label: 'Books' },
  { href: '/strava', label: 'Strava' },
];
---

<header class="site-header container">
  <a href="/" class="site-logo" aria-label="Clemente Lacerda â€” Home">
    <img src="/logo.png" alt="Clemente Lacerda" width="140" height="76" />
  </a>
  <nav class="site-nav">
    {navLinks.map((link) => (
      <a
        href={link.href}
        class:list={['nav-link', { active: pathname.startsWith(link.href) }]}
      >
        {link.label}
      </a>
    ))}
  </nav>
</header>

<style>
  .site-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-top: var(--space-2xl);
    padding-bottom: var(--space-xl);
    gap: var(--space-md);
  }

  .site-logo {
    background-image: none;
    line-height: 1;
    display: flex;
    align-items: center;
    margin-left: -35px;
  }

  .site-logo img {
    height: 180px;
    width: auto;
    margin-top: -72px;
    margin-bottom: -72px;
    transition: opacity var(--transition-base);
  }

  .site-logo:hover {
    background-size: 0% 0;
  }

  .site-logo:hover img {
    opacity: 0.7;
  }

  .site-logo:focus-visible {
    outline: 2px solid var(--color-accent);
    outline-offset: 4px;
    border-radius: 2px;
  }

  .site-nav {
    display: flex;
    align-items: center;
    gap: var(--space-lg);
  }

  .nav-link {
    font-size: var(--text-base);
    color: var(--color-text-muted);
    background-image: none;
    position: relative;
    padding-bottom: 2px;
    transition: color var(--transition-base);
  }

  .nav-link::after {
    content: '';
    position: absolute;
    left: 0;
    bottom: -2px;
    width: 0;
    height: 1.5px;
    background-color: var(--color-accent);
    transition: width var(--transition-base);
  }

  .nav-link:hover {
    color: var(--color-text);
    background-size: 0% 0;
  }

  .nav-link:hover::after {
    width: 100%;
  }

  .nav-link:focus-visible {
    outline: 2px solid var(--color-accent);
    outline-offset: 4px;
    border-radius: 2px;
  }

  .nav-link.active {
    color: var(--color-text);
    font-weight: 500;
  }

  .nav-link.active::after {
    width: 100%;
    background-color: var(--color-accent);
  }

  @media (max-width: 639px) {
    .site-header {
      flex-wrap: wrap;
    }

    .site-nav {
      gap: var(--space-md);
    }
  }
</style>
