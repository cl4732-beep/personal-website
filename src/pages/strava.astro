---
import PageLayout from '../layouts/PageLayout.astro';
import StravaDashboard from '../components/strava/StravaDashboard.astro';
import TrophyCase from '../components/strava/TrophyCase.astro';
---

<PageLayout title="Strava — Clemente Lacerda" description="My running and cycling stats from Strava">
  <section class="strava-page">
    <div class="strava-header">
      <div class="strava-header-text">
        <h1>Activity</h1>
        <p class="page-intro">
          Live stats from <a href="https://www.strava.com/athletes/7759885" target="_blank" rel="noopener noreferrer">my Strava</a>, updated every 15 minutes.
        </p>
        <blockquote class="page-quote">
          "Without commitment you'll never start, but more importantly, without consistency you'll never finish."
          <cite>— Denzel Washington</cite>
        </blockquote>
      </div>
      <TrophyCase />
    </div>
    <StravaDashboard />
  </section>
</PageLayout>

<style>
  .strava-page {
    padding-top: var(--space-3xl);
  }

  .strava-header {
    margin-bottom: var(--space-3xl);
  }

  .strava-page h1 {
    margin-bottom: var(--space-sm);
  }

  .page-intro {
    color: var(--color-text-muted);
    margin-bottom: var(--space-lg);
  }

  .page-quote {
    font-size: var(--text-base);
    margin-top: 0;
    margin-bottom: 0;
  }

  .page-quote cite {
    display: block;
    margin-top: var(--space-xs);
    font-size: var(--text-sm);
    font-style: normal;
  }

  @media (min-width: 640px) {
    .strava-page {
      padding-top: var(--space-4xl);
    }
  }

  @media (min-width: 1100px) {
    .strava-header {
      display: grid;
      grid-template-columns: 1fr minmax(500px, auto);
      gap: var(--space-2xl);
      align-items: start;
    }
  }
</style>
