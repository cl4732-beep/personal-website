---
import PageLayout from '../layouts/PageLayout.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('writings'))
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, 5);
---

<PageLayout title="Clemente Lacerda">
  <section class="hero">
    <h1 class="hero-label label">Welcome</h1>
    <p class="intro">
      I write about things I find interesting and share what I'm working on.
      This is a place for my writings, ideas, and a live dashboard of my training on Strava.
    </p>
    <p class="currently">Currently: MBA Student at Columbia Business School, Class of 2027</p>
  </section>

  <hr />

  {posts.length > 0 && (
    <section class="recent-writings">
      <h2 class="label">Recent Writings</h2>
      <ul class="post-list">
        {posts.map((post) => {
          const date = post.data.date.toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'short',
          });
          return (
            <li>
              <a href={`/writings/${post.id}`} class="post-link">
                <span class="post-title">{post.data.title}</span>
                <span class="post-date">{date}</span>
              </a>
            </li>
          );
        })}
      </ul>
      <a href="/writings" class="view-all">View all writings &rarr;</a>
    </section>
  )}
</PageLayout>

<style>
  .hero {
    padding-top: var(--space-4xl);
    padding-bottom: var(--space-2xl);
  }

  .hero-label {
    display: block;
    margin-bottom: var(--space-lg);
    color: var(--color-accent);
  }

  .intro {
    font-size: var(--text-lg);
    color: var(--color-text-muted);
    line-height: var(--leading-body);
    max-width: var(--content-max-width);
  }

  .currently {
    font-size: var(--text-sm);
    color: #5B8FB9;
    margin-top: var(--space-md);
    margin-bottom: 0;
    letter-spacing: var(--tracking-wide);
    font-variant: small-caps;
    text-transform: lowercase;
  }

  .recent-writings {
    padding-top: var(--space-xl);
  }

  .recent-writings h2 {
    margin-bottom: var(--space-lg);
  }

  .post-list {
    list-style: none;
    padding: 0;
    margin: 0 0 var(--space-xl) 0;
    max-width: var(--content-max-width);
  }

  .post-list li {
    margin-bottom: 0;
  }

  .post-link {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    padding: var(--space-sm) 0;
    gap: var(--space-md);
    color: var(--color-text);
    background-image: none;
    border-bottom: 1px solid var(--color-border);
    transition: color var(--transition-base);
  }

  .post-link:hover {
    color: var(--color-accent);
    background-size: 0% 0;
  }

  .post-link:focus-visible {
    outline: 2px solid var(--color-accent);
    outline-offset: 2px;
    border-radius: 2px;
  }

  .post-list li:last-child .post-link {
    border-bottom: none;
  }

  .post-title {
    font-weight: 500;
  }

  .post-date {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    white-space: nowrap;
    flex-shrink: 0;
  }

  .view-all {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }

  .view-all:hover {
    color: var(--color-accent);
  }

  @media (min-width: 640px) {
    .hero {
      padding-top: var(--space-5xl);
      padding-bottom: var(--space-3xl);
    }
  }
</style>
